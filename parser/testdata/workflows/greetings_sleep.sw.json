{
    "id": "greeting",
    "version": "1.0",
    "name": "Greeting Workflow",
    "description": "Greet Someone",
    "specVersion": "0.8",
    "start": "Greet",
    "functions": [
      {
        "name": "greetingFunction",
        "operation": "file://myapis/greetingapis.json#greeting"
      }
    ],
    "states": [
      {
        "name": "SleepHere",
        "type": "sleep",
        "timeouts": {
          "stateExecTimeout": "PT10S"
        },
        "duration": "PT40S"
      },
      {
        "name": "Greet",
        "type": "operation",
        "actions": [
          {
            "functionRef": {
              "refName": "greetingFunction",
              "parameters": {
                "name": "${ .person | .name }"
              }
            },
            "actionDataFilter": {
              "toStateData": "${ .greeting }"
            }
          }
        ],
        "end": {
          "terminate": true
        }
      }
    ]
}